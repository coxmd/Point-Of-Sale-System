                </form>
            </div>
            <div class=panel-heading>
                <h6 class=panel-title>View: System Users</h6>
            </div>
            <div class=table-responsive id=no-more-tables>
                <table class="col-md-12 table-striped table-condensed table-bordered cf compact" width="100%" id="userstable">
                    <thead class="cf">
                        <tr>
                            <th>
                                <strong>No</strong>
                            </th>
                            <th>
                                <strong>Username</strong>
                            </th>
                            <th>
                                <strong>Surname</strong>
                            </th>
                            <th>
                                <strong>Othernames</strong>
                            </th>                                              
                            <th>
                                <strong>Created On</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

