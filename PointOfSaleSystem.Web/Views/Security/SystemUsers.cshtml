@{
    ViewBag.Title = "Users";
}
<div class=row>
    <div class=col-md-12>
        <div class="panel panel-default">
            <div class=panel-heading>
                <h6 class=panel-title>System User Details</h6>
            </div>
            <div class=panel-body>
                <form id=SystemUserForm method=post autocomplete=off>
                    <div class=col-sm-4>
                        <input type=number id=SystemUserID hidden>
                        <div class=form-group>
                            <label>
                                <small>Username *</small>
                            </label>
                            <input id=Username class="form-control input-sm" autocomplete=off required>
                        </div>

                        <div class=form-group>
                            <label>
                                <small>Othernames</small>
                            </label>
                            <input id=Othernames class="form-control input-sm">
                        </div>
                                                
                        <div class=form-group>
                            <label>
                                <small>Surname</small>
                            </label>
                            <input id=Surname class="form-control input-sm">
                        </div>

                    </div>
                    <div class=col-sm-4>
                        <div class=row>
                            <div class=col-md-6>
                                <div class=form-group>
                                    <label>
                                        <small>Password  *</small>
                                    </label>
                                    <input type=password id=Password class="form-control input-sm" autocomplete=new-password required>
                                </div>
                            </div>
                            <div class=col-md-6>
                                <div class=form-group>
                                    <label>
                                        <small>Confirm Password *</small>
                                    </label>
                                    <input type=password id=ConfirmUserPassword class="form-control input-sm" autocomplete=new-password required>
                                </div>
                            </div>
                        </div>
                            <div class=form-group>
                            <label>
                                <small>DateTimeCreated</small>
                            </label>
                            <input id=DateTimeCreated class="form-control input-sm" autocomplete=off disabled>
                        </div>
                                <div class=form-group>
                            <label>
                                <small>Roles</small>
                            </label>
                            <select class="form-control input-sm select-roles" id=UserRolesIds style=width:100% multiple>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class=col-sm-4>
                                                 
                        <div id=update hidden>
                            <div class="btn-group btn-group.xs pull-right">
                                <button id=btnupdateuser class="btn btn-primary ladda-button" data-style=expand-right data-size=s>Update</button>
                                <a id=btnCreateNew class="btn btn-primary">New</a>
                            </div>
                        </div> 
                        <div id=adduser>
                            <button id=btnadduser class="btn btn-primary btn-xs pull-right ladda-button" data-style=expand-right data-size=s>
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </div>                        
                    </div>
